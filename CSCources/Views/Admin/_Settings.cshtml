
<strong>@TempData["user_Email"] </strong>

<hr />

@foreach (var item in ViewBag.roles)
{
    using (Ajax.BeginForm("_Settings_delRole", "Admin", new { id = @TempData["user_Id"], role = item, user_Email=@TempData["user_Email"] }, new AjaxOptions() { UpdateTargetId = "settings" }))
    {
        <input type="submit" value="Удалить роль" class="btn btn-danger" />
        <strong>@item</strong>
    }
    <br />
}

<hr />


<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Добавить роль
</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Роли:</h4>
                </div>
                
                <div class="modal-body">
                
                    @foreach (var item in ViewBag.rls)
                    {
                        using (Ajax.BeginForm("_Settings_saveRole", "Admin", new { id = @TempData["user_Id"], role = item.Name, user_Email = @TempData["user_Email"] }, new AjaxOptions() { UpdateTargetId = "settings" }))
                        {
                            <input type="submit" value=@item.Name class="btn btn-default btn-block"/>
                        }
                    }
                
                </div>
            </div>
        </div>
    </div>
